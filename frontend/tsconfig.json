{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],

  "compilerOptions": {
    "lib": ["ES2017", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/views": ["./src/views/*"],
      "@/components": ["./src/components/*"],
      "@/stores": ["./src/stores/*"],
      "@/models": ["./src/models/*"],
      "@/assets": ["./src/assets/*"]
    },
    "jsx": "preserve"
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
